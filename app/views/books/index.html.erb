<h1>Books</h1>
<!--タイトルとボディよこがき-->

<div>Title</div>
<div>Body</div>
<div class="table">
  <!--each do処理-->
    <% @books.each do |book| %>
  <div><%= book.Title %></div>
  <div><%= book.Body %></div>
  <!--Showボタン-->
  <div><%= link_to "Show", book_path(book.id) %>
  <!--ここのbookという変数はeach doの中の変数-->
  <!--Editボタン-->
  <%= link_to "Edit", edit_book_path(book.id) %>
  <!--Destroyボタン-->
  <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
  </div>
<% end %>
</div>

<h2>New book</h2>
<!--newのフォームウィズ画面-->
<%= form_with model:@book, local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :Title %>

<h4>Body<h4>
<%= f.text_field :Body %>

<%= f.submit 'Create Book' %>
<% end %>
