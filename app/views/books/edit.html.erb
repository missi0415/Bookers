<!--更新のページ-->
<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :Title %>

<h4>Body<h4>
<%= f.text_field :Body %>

<%= f.submit 'Update Book' %>

<p><!--Showボタン-->
<%= link_to "Show", book_path(@book.id) %>
<!--Backボタン-->
<a class="back" href="/books">Back</a>
</p>
<% end %>