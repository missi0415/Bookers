<!--更新のページ-->
<h1>Editing Book</h1>
<%= render 'sherd/error_form' %>
<div class="book">

<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
<p>Title</p>
<%= f.text_field :title %>

<p>Body</p>
<%= f.text_area :body %>

<p><%= f.submit 'Update Book' %></p>

<p><!--Showボタン-->
<%= link_to "Show", book_path(@book.id) %> |
<!--Backボタン-->|
<a class="back" href="/books">Back</a>
</p>
<% end %>
</div>